<p style="color: green"><%= notice %></p>

<h1 class="text-center bg-info text-light"> Tweets <i class="fa-brands fa-twitter fa-lg" style="color: #ffffff;"></i> </h1>
<%= form_with url: tweets_path, method: :get, id: "search-form" do |form| %>
  <%= form.text_field :query_text, placeholder: t('Query text'), value: params[:query_text], id: "query-text" %>
<% end %>

<div id="tweets" class="d-flex flex-column align-items-center">
  <% @tweets.each do |tweet| %>
    <div class="card mx-2 my-2 w-50">
      <div class="card-body d-flex">
        <div class="user-image mr-3">
          <%= image_tag tweet.image, class: "rounded-circle", width: 40, height: 40 %>
        </div>
        <div>
          <h5 class="card-title text-primary mb-1">User: <i class="fa-solid fa-star fa-sm" style="color: #85fffd;"></i> @<%= tweet.username %></h5>
          <p class="card-text"><%= tweet.description %></p>
          <%= link_to "Show this tweet", tweet, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= will_paginate @tweets %>

<p class="text-primary ">Total Pages: <%= @tweets.total_pages %></p>